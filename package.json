{
  "name": "graphql-nexus",
  "license": "UNLICENSED",
  "version": "0.0.0",
  "dependencies": {
    "@nexus/schema": "^0.15.0",
    "graphql": "^15.3.0",
    "graphql-yoga": "^1.18.3",
    "nexus-plugin-prisma": "^0.17.0"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "npm run clean && npx prisma generate && tsc",
    "migrate": "npx prisma migrate save --experimental && npx prisma migrate up --experimental",
    "run": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only api/app.ts",
    "dev": "nexus dev",
    "format": "npx prettier --write './**/*.{ts,md}'",
    "start": "node .nexus/build/api"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.60",
    "typescript": "^4.0.2"
  }
}
